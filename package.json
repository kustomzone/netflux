{
  "name": "netflux",
  "description": "Abstract peer to peer client transport API. Implementations based on WebRTC and webSocket to be done.",
  "main": "dist/netflux.es2015.umd.js",
  "jsnext:main": "dist/netflux.es2015.js",
  "version": "0.9.1",
  "scripts": {
    "prebuild": "rm -rf coverage dist",
    "build": "node rollup.config.js",
    "prefortest:all": "rm -rf ./tmp && mkdir ./tmp",
    "prefortest:init": "node rollup.config.js -t test/init.js tmp/test/init.js",
    "fortest:init": "node tmp/test/init.js & echo \"$!\" >> tmp/pids",
    "fortest:kill": "cat tmp/pids | xargs kill",
    "fortest:rollup-node": "find test -name '*test.js' | xargs -i node rollup.config.js -t '{}' tmp/'{}'",
    "fortest:signaling": "node ./node_modules/sigver/server.js & echo \"$!\" >> tmp/pids",
    "fortest:all": "npm run build && npm run fortest:signaling && npm run fortest:init",
    "pretest": "npm run fortest:all && npm run fortest:rollup-node",
    "pretest:browsers": "npm run fortest:all",
    "pretest:chrome": "npm run pretest:browsers",
    "pretest:firefox": "npm run pretest:browsers",
    "pretest:node": "npm run pretest",
    "pretest:coverage": "npm run pretest",
    "pretest:travis": "npm run pretest",
    "test": "node jasmine.conf.js; karma start; npm run fortest:kill",
    "test:browsers": "karma start; npm run fortest:kill",
    "test:chrome": "karma start --browsers Chrome; npm run fortest:kill",
    "test:firefox": "karma start --browsers Firefox; npm run fortest:kill",
    "test:node": "node jasmine.conf.js; npm run fortest:kill",
    "test:coverage": "node jasmine.conf.js; karma start karma.conf.coverage.js; npm run fortest:kill",
    "test:travis": "node jasmine.conf.js; karma start karma.conf.travis.js; npm run fortest:kill",
    "predoc:deploy": "json -I -f jsdoc.json -e \"this.templates.systemName=\\\"Netflux `git describe --abbrev=0 --tags`\\\"\" && npm run docdev",
    "doc": "jsdoc -d doc -c jsdoc.json -t ./node_modules/ink-docstrap/template -R README.md -r src",
    "doc:dev": "jsdoc -d doc -p -c jsdoc.json -t ./node_modules/ink-docstrap/template -R README.md -r src",
    "doc:deploy": "./jsdoc.deploy.sh",
    "postdoc": "mkdir -p doc/doc && cp -f doc/uml.png doc/doc/",
    "postdoc:dev": "mkdir -p doc/doc && cp -f doc/uml.png doc/doc/",
    "postdoc:deploy": "json -I -f jsdoc.json -e 'this.templates.systemName=\"Netflux\"'",
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coast-team/netflux.git"
  },
  "keywords": [
    "netflux",
    "webRTC",
    "p2p",
    "peer",
    "network"
  ],
  "author": "Philippe Kalitine <philippe.kalitine@gmail.com> (http://philippe.kalitine.name/)",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/coast-team/netflux/issues"
  },
  "homepage": "https://github.com/coast-team/netflux#readme",
  "config": {
    "ghooks": {
      "pre-commit": "npm run test:coverage"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "text-encoding": "^0.6.0",
    "webrtc-adapter": "^1.1.0",
    "wrtc": "~0.0.60",
    "ws": "^1.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "commitizen": "^2.4.6",
    "cz-conventional-changelog": "^1.1.5",
    "ghooks": "^1.0.1",
    "ink-docstrap": "^1.1.2",
    "istanbul": "^0.4.3",
    "jasmine": "^2.4.1",
    "jasmine-core": "^2.4.1",
    "jasmine-spec-reporter": "^2.5.0",
    "jsdoc": "^3.4.0",
    "json": "^9.0.3",
    "karma": "^1.1.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.0.0",
    "karma-coverage-es6": "^0.2.7",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-rollup-preprocessor": "^2.0.2",
    "karma-sauce-launcher": "^1.0.0",
    "rollup": "^0.34.0",
    "rollup-plugin-filesize": "^0.4.4",
    "rollup-plugin-includepaths": "^0.1.5",
    "rollup-plugin-istanbul": "^1.0.0",
    "rollup-plugin-string": "^2.0.2",
    "semantic-release": "^4.3.5",
    "sigver": "^7.1.0",
    "standard": "^7.0.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "netflux",
      "jasmine",
      "describe",
      "xdescribe",
      "it",
      "xit",
      "expect",
      "beforeEach",
      "afterEach",
      "beforeAll",
      "afterAll",
      "DOMException",
      "RTCPeerConnection",
      "RTCSessionDescription",
      "RTCDataChannel",
      "RTCIceCandidate",
      "WebSocket",
      "TextEncoder",
      "TextDecoder",
      "Event",
      "CloseEvent"
    ],
    "ignore": [
      "dist/*",
      "karma*.js"
    ]
  }
}
